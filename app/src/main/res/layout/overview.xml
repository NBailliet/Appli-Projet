<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/scrollview1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="1000dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:text="@string/action_overview"
            android:textColor="#FFFFFF"
            android:textSize="80px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="121dp"
            android:id="@+id/textView1"/>

        <TextView
            android:text="Graph Test 1"
            android:textColor="#FFFFFF"
            android:textSize="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="116dp"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="20dp"
            android:id="@+id/textGraph1"/>

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:id="@+id/graph"
            android:layout_below="@+id/textGraph1"
            android:layout_marginTop="20dp"/>

        <TextView
            android:text="Graph Test 2"
            android:textColor="#FFFFFF"
            android:textSize="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="116dp"
            android:layout_below="@+id/graph"
            android:layout_marginTop="20dp"
            android:id="@+id/textGraph2"/>

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:id="@+id/graph2"
            android:layout_below="@+id/textGraph2"
            android:layout_marginTop="20dp"/>

        <TextView
            android:text="Bonjour"
            android:textColor="#FFFFFF"
            android:textSize="100px"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="1000dp"/>
    </RelativeLayout>

</ScrollView>



